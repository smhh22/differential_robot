<?xml version="1.0"?>
<robot name="two_wheel">
  <link name="base_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder length="0.1" radius="0.3"/>
      </geometry>
      <material name="chassis_grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder length="0.1" radius="0.3"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <mass value="5"/>
      <inertia ixx="0.11667" ixy="0" ixz="0" iyy="0.11667" iyz="0" izz="0.225"/>
    </inertial>
  </link>
  
    <!-- Drive wheels -->
  <link name="drivewhl_l_link">
    <visual>
      <origin xyz="0.0 -0.05 0.0" rpy="1.5708 0 3.1416"/>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
      <material name="wheel_grey_l">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 -0.05 0.0" rpy="1.5708 0 3.1416"/>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 -0.05 0" rpy="1.5708 0 3.1416"/>
      <inertia ixx="0.00167" ixy="0" ixz="0" iyy="0.00167" iyz="0" izz="0.0025"/>
    </inertial>
  </link>

  <joint name="drivewhl_l_joint" type="revolute">
    <parent link="base_link"/>
    <child link="drivewhl_l_link"/>
    <origin xyz="0.0 -0.3 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.999999" upper="0.999999" effort="5" velocity="1"/>
  </joint>

  <link name="drivewhl_r_link">
    <visual>
      <origin xyz="0.0 0.05 0.0" rpy="1.5708 0 3.1416"/>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
      <material name="wheel_grey_r">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.05 0.0" rpy="1.5708 0 3.1416"/>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0.0 0.05 0.0" rpy="1.5708 0 3.1416"/>
      <inertia ixx="0.00167" ixy="0" ixz="0" iyy="0.00167" iyz="0" izz="0.0025"/>
    </inertial>
  </link>

  <joint name="drivewhl_r_joint" type="revolute">
    <parent link="base_link"/>
    <child link="drivewhl_r_link"/>
    <origin xyz="0.0 0.3 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.999999" upper="0.999999" effort="5" velocity="1"/>
  </joint>
  
  <link name="rplidar">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <mass value="0.5"/>
      <inertia ixx="0.00167" ixy="0" ixz="0" iyy="0.00167" iyz="0" izz="0.0025"/>
    </inertial>
    <visual name="">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
      <material name="rplidar">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="rplidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rplidar"/>
    <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
  </joint>

  <!-- ZED IMU -->
  <joint name="zed_imu_joint" type="fixed">
    <parent link="rplidar"/>
    <child link="zed_imu_link"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
  </joint>

  <link name="zed_imu_link">
    <inertial>
      <mass value="0.02"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.000001333" ixy="0" ixz="0" iyy="0.000001333" iyz="0" izz="0.000001333"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
      <material name="imu_frame">
        <color rgba="1.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </collision>
  </link>
  
  <!-- IMU Plugin -->
  <gazebo>
      <plugin filename="libignition-gazebo-imu-system"
          name="ignition::gazebo::systems::Imu">
      </plugin>
  </gazebo>
  <gazebo reference="zed_imu_link">
      <sensor name="imu_sensor" type="imu">
          <always_on>1</always_on>
          <update_rate>100</update_rate>
          <visualize>true</visualize>
          <topic>/zed/zed_node/imu/data_raw</topic>
      </sensor>
  </gazebo>

  
  <gazebo>
    <plugin
        filename="gz-sim-diff-drive-system"
        name="gz::sim::systems::DiffDrive">
        <topic>/cmd_vel</topic>

        <left_joint>drivewhl_l_joint</left_joint>
        <right_joint>drivewhl_r_joint</right_joint>

        <wheel_separation>0.45</wheel_separation>
        <wheel_radius>0.1</wheel_radius> 

        <max_velocity>3.0</max_velocity> 
        <max_linear_acceleration>1</max_linear_acceleration>
        <min_linear_acceleration>-1</min_linear_acceleration>
        <max_angular_acceleration>2</max_angular_acceleration>
        <min_angular_acceleration>-2</min_angular_acceleration>
        <max_linear_velocity>0.5</max_linear_velocity>
        <min_linear_velocity>-0.5</min_linear_velocity>
        <max_angular_velocity>1</max_angular_velocity>
        <min_angular_velocity>-1</min_angular_velocity>
        
        <odom_topic>/wheel_encoder/odom</odom_topic> 
        <frame_id>odom</frame_id>
        <child_frame_id>base_link</child_frame_id>
        <odom_publish_frequency>60</odom_publish_frequency>
    </plugin>

    <plugin
        filename="gz-sim-joint-state-publisher-system"
        name="gz::sim::systems::JointStatePublisher">
        <topic>joint_states</topic>
        <joint_name>drivewhl_l_joint</joint_name>
        <joint_name>drivewhl_r_joint</joint_name>
    </plugin>
  </gazebo>
  
  <gazebo reference="rplidar">
    <sensor type="gpu_ray" name="rplidar_sensor">
        <always_on>1</always_on>
        <visualize>true</visualize>
        <update_rate>20</update_rate>
        <topic>/gz_lidar/scan</topic>
        <ray>
            <scan>
                <horizontal>
                    <samples>720</samples>
                    <resolution>1</resolution>
                    <min_angle>-3.14</min_angle>
                    <max_angle>3.14</max_angle>
                </horizontal>
            </scan>
            <range>
                <min>0.8</min>
                <max>60.0</max>
                <resolution>0.01</resolution>
            </range>  
            <noise>
                <type>gaussian</type>
                <mean>0.0</mean>
                <stddev>0.01</stddev>
            </noise>
        </ray>
    </sensor>
  </gazebo>

</robot>
